{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/register.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/login.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/user/[id].js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "pages/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "script/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/cursos",
      "dest": "/pages/courses.html",
      "status": 200
    },
    {
      "src": "/ebooks",
      "dest": "index.html",
      "status": 200
    },
    {
      "src": "/produtos",
      "dest": "/pages/products.html",
      "status": 200
    },
    {
      "src": "/log-in",
      "dest": "/api/auth/login",
      "methods": ["POST"], 
      "status": 200
    },
    {
      "src": "/sign-in",
      "dest": "/api/auth/register",
      "methods": ["POST"], 
      "status": 200
    },
    {
      "src": "/log-in",
      "dest": "/pages/log-in.html",
      "methods": ["GET"],
      "status": 200
    },
    {
      "src": "/sign-in",
      "dest": "/pages/sign-in.html",
      "methods": ["GET"],
      "status": 200
    },
    {
      "src": "/perfil",
      "dest": "/pages/profile.html",
      "status": 200
    },
    {
      "src": "/carrinho",
      "dest": "/pages/cart.html",
      "status": 200
    },
    {
      "src": "/dashboard",
      "dest": "pages/dashboard.html",
      "status": 200
    }
  ]
}
